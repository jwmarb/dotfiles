# Generated by 'wal'
wallpaper='$HOME/wallpapers/walls/mountains.jpg'

# Special
background='#0e0a17'
foreground='#bfd3e2'
cursor='#bfd3e2'

# Colors
color0='#0e0a17'
color1='#ED8E69'
